    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.tactalk.statistics.StatisticFragment" android:tag="layout/fragment_statistics_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/textView"
            android:layout_width="405dp"
            android:layout_height="60dp"
            android:layout_marginTop="44dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:text="STATISTICS"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/second_half"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_marginTop="244dp"
            android:text="@string/second_half"
            android:textColor="#FFFFFF"
            app:backgroundTint="#2AC87B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <Button
            android:id="@+id/end_game"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_marginTop="244dp"
            android:text="@string/end_game"
            android:textColor="#FFFFFF"
            app:backgroundTint="#2AC87B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="256dp"
            android:layout_height="46dp"
            android:layout_marginTop="23dp"
            android:background="@color/white"
            android:text="@string/TeamA"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="256dp"
            android:layout_height="46dp"
            android:layout_marginTop="32dp"
            android:background="@color/white"
            android:text="@string/TeamB"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="169dp"
            android:layout_height="40dp"
            android:layout_marginTop="47dp"
            android:tag="binding_1"                                  
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         