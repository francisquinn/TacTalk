<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.tactalk">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TacTalk">
        <activity android:name=".login.LoginFragment"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".register.RegisterFragment" />
        <!--<activity android:name=".activity.LoginFragment" />-->
        <activity
            android:name=".recording.RecordingPageFragment"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".main.MainMenuFragment"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".statistics.StatisticFragment"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".end.EndGameFragment"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".user.UserFragment"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".match.SetUpMatchFragment"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".team.CreateTeamFragment"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".team.ManageTeamFragment"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".player.AddPlayerFragment"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>