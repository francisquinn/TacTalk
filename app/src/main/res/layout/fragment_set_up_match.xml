<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".match.SetUpMatchFragment">

    <TextView
        android:id="@+id/SetUpMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_up_match"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="30sp" />

    <ScrollView
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:scrollbars="none">

        <!-- LinearLayout Inside ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_game_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@color/editTextBack"
                android:hint="Game Name"
                android:imeOptions="actionNext"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/chosen_game_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@color/editTextBack"
                android:entries="@array/game_type"
                android:hint="Chosen Game Type"
                android:paddingLeft="10dp" />


            <EditText
                android:id="@+id/edt_team_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@color/editTextBack"
                android:hint="Team Name"
                android:imeOptions="actionNext"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/chosen_team_colour"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@color/editTextBack"
                android:entries="@array/team_colour"
                android:hint="Chosen Team Colour"
                android:paddingLeft="10dp" />

            <EditText
                android:id="@+id/edt_opposition"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@color/editTextBack"
                android:hint="Opposition"
                android:imeOptions="actionNext"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/chosen_opp_colour"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@color/editTextBack"
                android:entries="@array/opp_colour"
                android:hint="Chosen Opposition Colour"
                android:paddingLeft="10dp" />

            <EditText
                android:id="@+id/edt_location"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@color/editTextBack"
                android:hint="Location"
                android:imeOptions="actionNext"
                android:paddingLeft="10dp"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/chosen_public"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@color/editTextBack"
                android:entries="@array/chose_public"
                android:hint="Chosen Public or Not"
                android:imeOptions="actionNext"
                android:paddingLeft="10dp" />

            <LinearLayout
                android:id="@+id/nineLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <TextView
                    android:id="@+id/selectedDate"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.2"
                    android:background="@color/editTextBack"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp" />

                <Button
                    android:id="@+id/selectDate"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8"
                    android:hint="Select Date"
                    android:textColor="@color/white"
                    android:onClick="onClick"
                    android:paddingLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tenLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <TextView
                    android:id="@+id/selectedTime"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.2"
                    android:background="@color/editTextBack"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp" />

                <Button
                    android:id="@+id/selectTime"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8"
                    android:hint="Select Time"
                    android:textColor="@color/white"
                    android:onClick="onClick"
                    android:paddingLeft="10dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_setUpMatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_custom"
                android:onClick="onClick"
                android:text="@string/done_button"
                android:textColor="@color/white"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>